@model List<AvtoHubProject.Models.Product>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AvtoHub- Ana Səhifə</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="icon" href="~/logoAvtoHub.jfif" type="image/x-icon">
</head>
<body>
    <header>
        <div class="logo">Auto<span>Hub</span></div>

        
        @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <nav>
                <ul>
                    <li><a asp-action="AdminDashboard" asp-controller="AdminHub">AdminDashboard</a></li>
                    <li><a asp-action="Statistics" asp-controller="AdminHub">Statistikalar</a></li>
                    <li><a asp-action="Feedbacks" asp-controller="AdminHub">Müraciətlər/Şikayətlər</a></li>
                </ul>   
                <div class="auth-buttons">
                    <a asp-action="MyAccount" asp-controller="AvtoHub" class="login-btn">@User.Identity.Name</a>
                    <form method="post" asp-action="LockOut" asp-controller="Account" class="logout-btn">
                       <button id="btn">Çıxış et</button>
                    </form>
                </div>
            </nav>
        }
        else if(User.Identity.IsAuthenticated && User.IsInRole("User"))
        {
            <nav>
                <ul>
                    <li><a asp-action="About" asp-controller="AvtoHub">Haqqımızda</a></li>
                    <li><a asp-action="Contact" asp-controller="AvtoHub">Əlaqə</a></li>
                </ul>
                <div class="auth-buttons">
                    <form asp-controller="AvtoHub" asp-action="profile" method="get">
                        <button id="btn">@User.Identity.Name</button>
                    </form>
                    <form asp-controller="Account" asp-action="SignOut" method="post">
                       <button id="btn">Çıxış et</button>
                    </form>

                </div>
            </nav>
        }
        else
        {
            <nav>
                <ul>
                    <li><a asp-action="AboutUs" asp-controller="AvtoHub">Haqqımızda</a></li>
                    <li><a asp-action="Contact" asp-controller="AvtoHub">Əlaqə</a></li>
                </ul>
                <div class="auth-buttons">
                    <a asp-action="Login" asp-controller="Account" class="login-btn">Daxil Ol</a>
                    <a style="background-color:green" asp-action="Register" asp-controller="Account" class="logout-btn">Qeydiyyatdan Keç</a>
                </div>
            </nav>
        }
        <div class="search-bar">
            <input type="text" placeholder="Axtar...">
            <select>
                <option value="0">Yeni?</option>
                <option value="new">Yeni</option>
                <option value="used">Yeni Deyil</option>
            </select>
            <select>
                <option value="0">Ərazi</option>
                <option value="ny">Bakı</option>
                <option value="la">Los Angeles</option>
            </select>
            <select>
                <option value="0">Qiymət aralığı</option>
                <option value="0-20000">$0 - $20,000</option>
                <option value="20000-40000">$20,000 - $40,000</option>
                <option value="40000-60000">$40,000 - $60,000</option>
            </select>
            <select>
                <option value="0">İl</option>
                <option value="2020-2024">2020 - 2024</option>
                <option value="2015-2019">2015 - 2019</option>
                <option value="2010-2014">2010 - 2014</option>
            </select>
            <button class="search-btn">Axtar</button>
        </div>
    </header>
    <section class="hero-section">
                <div class="hero-content">
                    <h1>Xəyalındakı Avtomobili Tap</h1>
                    <p>Ən keyfiyyətli avtomobillərdə ən yaxşı təklifləri kəşf edin.</p>
                    <a asp-action="Login" asp-controller="Account" class="hero-btn">Daxil Ol</a>
                </div>
            </section>
    <section class="featured-cars">
        @if (Model.Count == 0)
        {
            <h2>Hal Hazirda Saytda Elan yoxdur</h2>
            
        }
        else
        {
            <h2 style="font-family:'Poppins', sans-serif;color:#212A31">Aktiv Elanlar</h2>
            <div class="cars-container">
                    @foreach (var product in Model)
                    {
                       <a target="_blank" asp-action="Cars" style="text-decoration:none" asp-route-id="@product.Id">
                        <div class="product-card">

                            <div class="image-container">
                                <img src="~/AvtoHubImages/@product.ImagePath" alt="Car Image">
                            </div>
                            <div class="product-info">
                                <h3 class="price">@product.Price</h3>
                                <p class="car-model">@product.Marka,@product.Model</p>
                                <p class="details">@product.EnginePower (m3), @product.MileAge km</p>
                                <p class="location">@product.Price manat</p>
                            </div>
                        </div>
                       </a>
                    }
            </div>
        }
    </section>

    <footer>
        <p>&copy; 2024 AutoHub. All Rights Reserved.</p>
    </footer>
    <style>
        #product-card-link :hover{
            text-decoration:none
        }

        #product-card-link :active {
            text-decoration: none
        }
