@model AvtoHubProject.Models.AvtoHubLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AvtoHub - Daxil Ol</title>
    <link rel="icon" href="~/logoAvtoHub.jfif" type="image/x-icon">
</head>
<body>
    <header>
        <div class="logo">Avto<span>Hub</span></div>
    </header>
    <div class="login-container">
        <h2>Daxil Ol</h2>
        <form asp-action="Login" method="post">
            <div class="input-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="text" >
                <span style="color:red" asp-validation-for="Email"></span>
            </div>
            <div class="input-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" >
                <span style="color:red" asp-validation-for="Password"></span>
            </div>
            <div class="checkbox-group">
                <input asp-for="RememberMe">
                <label asp-for="RememberMe"></label>
                <span style="color:red" asp-validation-for="RememberMe"></span>
            </div>
            <button type="submit" class="login-btn">Daxil Ol</button>
            <span style="color:red">@Html.ValidationMessage("LockedOut")</span>
            <span style="color:red">@Html.ValidationMessage("LoginFailed")</span>
            <a asp-action="Register" asp-controller="Account" class="forgot-password">Hesabın Yoxdur?</a>
        </form>
    </div>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        header {
            background-color: #212A31;
            padding: 20px 50px;
            display: flex;
            flex-direction: column;
            align-items: center;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }
        .logo {
            font-size: 1.8em;
            font-weight: bold;
            color: #fff;
        }

            .logo span {
                color: #124E66;
            }

        nav {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

            nav ul {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
            }

                nav ul li {
                    margin-left: 30px;
                }

                    nav ul li a {
                        color: #fff;
                        text-decoration: none;
                        font-size: 1em;
                        transition: color 0.3s;
                    }

                        nav ul li a:hover {
                            color: #124E66;
                        }

        .auth-buttons {
            display: flex;
            margin-left: auto; /* Bu xətti əlavə edin */
            margin-right: 70px;
        }

            .auth-buttons a {
                margin-left: 10px; /* Aralarındakı boşluğu azaldın */
                padding: 10px 20px;
                border-radius: 5px;
                text-decoration: none;
                font-size: 1em;
                color: white;
                transition: background-color 0.3s;
            }

        .login-btn {
            background-color: #124E66;
        }

        .logout-btn {
            background-color: #C0392B;
        }

        .auth-buttons a:hover {
            background-color: #0a3749;
        }

        /* Search Bar Styles */
        .search-bar {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 15px;
        }

            .search-bar input[type="text"] {
                padding: 10px;
                font-size: 1em;
                border: 1px solid #ccc;
                border-radius: 5px 0 0 5px;
                width: 40%;
            }

            .search-bar select {
                padding: 10px;
                font-size: 1em;
                border: 1px solid #ccc;
                border-radius: 0;
            }

            .search-bar button {
                padding: 10px 20px;
                font-size: 1em;
                border: none;
                border-radius: 0 5px 5px 0;
                background-color: #124E66;
                color: white;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .search-bar button:hover {
                    background-color: #0a3749;
                }

        /* Hero Section Styles */
        .hero-section {
            background-image: url('hero-bg.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #fff;
            padding: 0 20px;
            position: relative;
            top: 120px;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
            }

        .hero-content {
            z-index: 1;
            max-width: 700px;
        }

        .login-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
            width: 400px;
            margin-top: 190px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .input-group {
            margin-bottom: 15px;
        }

            .input-group label {
                display: block;
                color: #333;
            }

            .input-group input {
                width: 100%;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
                margin-top: 5px;
            }

        .checkbox-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .checkbox-group input {
                margin-right: 10px;
            }

        .login-btn {
            width: 100%;
            padding: 10px;
            background-color: #124E66;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .login-btn:hover {
                background-color: #0a3749;
            }

        .forgot-password {
            display: block;
            text-align: right;
            margin-top: 10px;
            color: #124E66;
            text-decoration: none;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

    </style>
</body>
</html>
